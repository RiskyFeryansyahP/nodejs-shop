
<div class="row">
    {{# each product}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="https://upload.wikimedia.org/wikipedia/en/5/5e/Gothiccover.png" alt="..." class="img-responsive">
      <div class="caption">
        <h3> {{this.title}} </h3>
        <p class="description"> {{this.description}} </p>
        <p>
            <div class="clearfix">
               <div class="price pull-left">{{this.price}}</div>
                <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add To Cart</a>
            </div>
        </p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
